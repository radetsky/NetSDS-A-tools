//* Make incoming call 
//*********************

macro init-call () { 
		&replace_callerid_num_by_name();
		&set_callerid_to_nine(); 
    AGI(agi://perlapps:20201/uuid);
    NoOp(UUID=${UUID});
    Set(MONITOR_FILENAME=${STRFTIME(${EPOCH},,%Y%m%d)}_${UUID});
    Set(TIMEOUT(absolute)=3600);
